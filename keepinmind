#include <iostream>
#include <bitset>
using namespace std;

int main() {
    int user_input;
    char run_again;

    do {
        // Ask user for input
        cout << "Enter number under 255 to be converted to binary: ";
        cin >> user_input;

        if (user_input < 0 || user_input > 255) {
            cout << "Please enter a number between 0 and 255!" << endl;
            continue;  // Ask again if input is invalid
        }

        // Display binary representation using bitset
        bitset<8> binary(user_input);
        cout << user_input << " in binary is " << binary << " (computer translated)" << endl;

        // Initialize binary raise variables
        int seven_raise = 0, six_raise = 0, five_raise = 0, four_raise = 0;
        int three_raise = 0, two_raise = 0, one_raise = 0, zero_raise = 0;
        
        // Store the original input value
        int original_input = user_input;

        // Calculate binary bits
        if (user_input >= 128) {
            seven_raise = 1;
            user_input -= 128;
        }
        if (user_input >= 64) {
            six_raise = 1;
            user_input -= 64;
        }
        if (user_input >= 32) {
            five_raise = 1;
            user_input -= 32;
        }
        if (user_input >= 16) {
            four_raise = 1;
            user_input -= 16;
        }
        if (user_input >= 8) {
            three_raise = 1;
            user_input -= 8;
        }
        if (user_input >= 4) {
            two_raise = 1;
            user_input -= 4;
        }
        if (user_input >= 2) {
            one_raise = 1;
            user_input -= 2;
        }
        if (user_input >= 1) {
            zero_raise = 1;
            user_input -= 1;
        }

        // Display the manually calculated binary representation
        cout << original_input << " in binary is " 
             << seven_raise << six_raise << five_raise << four_raise 
             << three_raise << two_raise << one_raise << zero_raise
             << " (code translated)" << endl;

        // Ask if the user wants to try again
cout << "Would you like to try another number? Type Y or y if yes: ";
cin >> run_again;

} while (run_again == 'Y' || run_again == 'y');

return 0;
}
